{
    "swagger": "2.0",
    "info": {
        "title": "Airflight Service API",
        "contact": {},
        "version": "1.0"
    },
    "host": "localhost:8000",
    "basePath": "/",
    "paths": {
        "/airports": {
            "get": {
                "description": "Retrieve a list of all airports from the database",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "airports"
                ],
                "summary": "Get all airports",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Airport city",
                        "name": "city",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/main.Airport"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/airports/inbound-schedule/{airport_code}": {
            "get": {
                "description": "Retrieves the inbound flight schedule for a specified airport",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "airports"
                ],
                "summary": "Get inbound schedule for an airport",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Airport code",
                        "name": "airport_code",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/main.FlightSchedule"
                            }
                        }
                    },
                    "400": {
                        "description": "Missing or invalid airport code",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/airports/outbound-schedule/{airport_code}": {
            "get": {
                "description": "Retrieves the outbound flight schedule for a specified airport",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "airports"
                ],
                "summary": "Get outbound schedule for an airport",
                "parameters": [
                    {
                        "type": "string",
                        "description": "Airport code",
                        "name": "airport_code",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/main.FlightSchedule"
                            }
                        }
                    },
                    "400": {
                        "description": "Missing or invalid airport code",
                        "schema": {
                            "type": "string"
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        },
        "/cities": {
            "get": {
                "description": "Retrieve a list of all cities from the database",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "cities"
                ],
                "summary": "Get all cities",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "main.Airport": {
            "type": "object",
            "properties": {
                "airport_code": {
                    "type": "string"
                },
                "airport_name": {
                    "type": "string"
                },
                "city": {
                    "type": "string"
                },
                "timezone": {
                    "type": "string"
                }
            }
        },
        "main.FlightSchedule": {
            "type": "object",
            "properties": {
                "day_of_week": {
                    "type": "string"
                },
                "flight_no": {
                    "type": "string"
                },
                "origin_airport": {
                    "type": "string"
                },
                "time_of_arrival": {
                    "type": "string"
                }
            }
        }
    }
}